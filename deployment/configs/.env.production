# TheCookFlow - Variables de Entorno de Producción
# =============================================
# IMPORTANTE: Completa todos los valores antes de desplegar

# Base de Datos PostgreSQL
DB_PASSWORD=thecookflow_secure_password_2024
DATABASE_URL=postgresql://thecookflow_user:thecookflow_secure_password_2024@localhost:5432/thecookflow

# Redis Cache
REDIS_PASSWORD=redis_secure_password_2024
REDIS_URL=redis://:redis_secure_password_2024@localhost:6379

# Seguridad
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_32_caracteres_minimo
JWT_REFRESH_SECRET=tu_jwt_refresh_secret_super_seguro_aqui_40_chars
SESSION_SECRET=tu_session_secret_super_seguro_aqui_32_chars_min

# API Keys de IA
OPENAI_API_KEY=sk-...  # Tu API key de OpenAI
PERPLEXITY_API_KEY=pplx-...  # Tu API key de Perplexity

# Google OAuth
GOOGLE_CLIENT_ID=tu_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_google_client_secret

# Google Play Billing (para Android)
GOOGLE_PLAY_PACKAGE_NAME=com.thecookflow.app
GOOGLE_PLAY_SERVICE_ACCOUNT_EMAIL=tu-service-account@project.iam.gserviceaccount.com
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY=tu_private_key_json_aqui

# Stripe (Pagos)
STRIPE_SECRET_KEY=sk_live_...  # Tu Stripe secret key
STRIPE_PUBLIC_KEY=pk_live_...  # Tu Stripe public key
STRIPE_WEBHOOK_SECRET=whsec_...  # Tu webhook secret

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=thecookflow-prod
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@thecookflow-prod.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# AWS S3 (Backups)
AWS_ACCESS_KEY_ID=AKIA...  # Tu AWS access key
AWS_SECRET_ACCESS_KEY=...  # Tu AWS secret key
AWS_BUCKET_NAME=thecookflow-backups
AWS_REGION=eu-west-1

# Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=notificaciones@thecookflow.com
EMAIL_PASS=tu_password_de_email
EMAIL_FROM="TheCookFlow <notificaciones@thecookflow.com>"

# URLs de Producción
FRONTEND_URL=https://thecookflow.com
API_URL=https://api.thecookflow.com
CHAT_URL=https://chat.thecookflow.com
DOCS_URL=https://docs.thecookflow.com

# Configuración de Aplicación
NODE_ENV=production
PORT=3001
WEBAPP_PORT=3000
ASSISTANT_PORT=3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Logs y Monitoreo
LOG_LEVEL=info
SENTRY_DSN=https://...@sentry.io/...  # Tu Sentry DSN (opcional)

# Configuración de Sesiones
SESSION_MAX_AGE=86400000  # 24 horas en ms
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=strict

# Configuración de CORS
CORS_ORIGINS=https://thecookflow.com,https://www.thecookflow.com,https://api.thecookflow.com,https://chat.thecookflow.com

# Configuración del Assistant
MAX_CONNECTIONS=1000
MESSAGE_RETENTION_HOURS=24
AI_MODEL=gpt-4-turbo-preview
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Configuración de Backup
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM todos los días

# Flags de Feature
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
MAINTENANCE_MODE=false