<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chalk_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Close button -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Cerrar"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/chalk_white" />

        <!-- Premium logo/icon -->
        <ImageView
            android:id="@+id/iv_premium_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:contentDescription="Premium"
            android:src="@drawable/ic_premium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_close"
            app:tint="@color/chalk_green" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/kalam_bold"
            android:gravity="center"
            android:text="¡Prueba Premium 7 días GRATIS!"
            android:textColor="@color/chalk_white"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_premium_icon" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/caveat"
            android:gravity="center"
            android:text="Desbloquea todas las funciones Premium"
            android:textColor="@color/chalk_white_75"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <!-- Benefits list -->
        <LinearLayout
            android:id="@+id/ll_benefits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle">

            <!-- Benefit 1: Unlimited menus -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Check"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/chalk_green" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/kalam_regular"
                    android:text="Menús ilimitados con IA"
                    android:textColor="@color/chalk_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Benefit 2: No ads -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Check"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/chalk_green" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/kalam_regular"
                    android:text="Sin anuncios"
                    android:textColor="@color/chalk_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Benefit 3: Advanced features -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Check"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/chalk_green" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/kalam_regular"
                    android:text="Análisis nutricional completo"
                    android:textColor="@color/chalk_white"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Benefit 4: Priority support -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Check"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/chalk_green" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/kalam_regular"
                    android:text="Soporte prioritario"
                    android:textColor="@color/chalk_white"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Free trial button (main CTA) -->
        <Button
            android:id="@+id/btn_free_trial"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_chalk_primary"
            android:fontFamily="@font/kalam_bold"
            android:text="Empezar prueba gratuita de 7 días"
            android:textAllCaps="false"
            android:textColor="@color/chalk_dark"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_benefits" />

        <!-- Price info -->
        <TextView
            android:id="@+id/tv_price_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/caveat"
            android:gravity="center"
            android:text="Después €1.99/mes • Cancela cuando quieras"
            android:textColor="@color/chalk_white_75"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_free_trial" />

        <!-- Skip button -->
        <TextView
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/kalam_regular"
            android:gravity="center"
            android:paddingHorizontal="24dp"
            android:text="Tal vez más tarde"
            android:textColor="@color/chalk_white_50"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_price_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>