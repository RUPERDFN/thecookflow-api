# =================================
# CONFIGURACIÓN GENERAL
# =================================
NODE_ENV=production
PORT=5000

# =================================
# CORS Y SEGURIDAD
# =================================
CORS_ORIGIN=https://app.thecookflow.com
ALLOWED_ORIGINS=https://app.thecookflow.com,https://thecookflow.com

# =================================
# BASE DE DATOS (PostgreSQL)
# =================================
DATABASE_URL=postgres://USERNAME:PASSWORD@HOST:5432/thecookflow

# =================================
# AUTENTICACIÓN Y JWT
# =================================
JWT_SECRET=changeme-please-use-long-random-string

# =================================
# PROVEEDORES DE IA
# =================================
OPENAI_API_KEY=sk-your-openai-key
PERPLEXITY_API_KEY=px-your-perplexity-key

# =================================
# GITHUB PACKAGES (si usas @ruperdfn/thecookflow-shared)
# =================================
# NODE_AUTH_TOKEN=ghp_your_personal_access_token_with_read_packages

# =================================
# WEBHOOKS Y NOTIFICACIONES
# =================================
# COOLIFY_WEBHOOK_URL=https://coolify.example.com/api/webhooks/...

# =================================
# LOGS
# =================================
LOG_LEVEL=info
