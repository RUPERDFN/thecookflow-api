# RUNTIME
NODE_ENV=development
PORT=3000

# CORS
# Lista CSV de orígenes permitidos. Ej:
# - Dev (Vite): http://localhost:5173
# - Alternos:   http://localhost:3001
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001
# Fallback (se usará si ALLOWED_ORIGINS está vacío)
CORS_ORIGIN=http://localhost:5173

# AUTH/SESSION
JWT_SECRET=change-me
# Usa un secreto propio de al menos 16 caracteres; no reutilices JWT_SECRET
SESSION_SECRET=change-me-session

# DATA/IA
DATABASE_URL=postgres://user:password@localhost:5432/thecookflow
OPENAI_API_KEY=sk-your-openai-key
PERPLEXITY_API_KEY=px-your-perplexity-key

# GOOGLE PLAY (usar siempre en BASE64 para evitar saltos de línea)
# Clave pública PEM → Base64 (sin saltos): GOOGLE_PLAY_PUBLIC_KEY_B64
GOOGLE_PLAY_PUBLIC_KEY_B64=BASE64_HERE
# Service Account JSON → Base64
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON_B64=BASE64_HERE

# GCS / FIREBASE (también en Base64 si es JSON)
GCS_BUCKET_NAME=thecookflow-dev
GCS_SERVICE_ACCOUNT_JSON_B64=BASE64_HERE
FIREBASE_SERVICE_ACCOUNT_JSON_B64=BASE64_HERE

# CI/CD
COOLIFY_WEBHOOK_URL=https://coolify.example.com/webhook
