# Environment Configuration Example
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development
PORT=5000
API_VERSION=1.0.0

# Database (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/thecookflow

# Security (Required)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-chars
SESSION_SECRET=your-super-secret-session-key-minimum-32-chars

# AI Services (At least one required for menu generation)
OPENAI_API_KEY=sk-...
PERPLEXITY_API_KEY=pplx-...

# Google Play Billing (Required for Android app subscriptions)
GOOGLE_PLAY_PUBLIC_KEY=MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA...
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON_BASE64=base64-encoded-json

# Google Cloud Storage (Optional)
GCS_BUCKET_NAME=thecookflow-images
GCS_SERVICE_ACCOUNT_KEY=base64-encoded-json

# Firebase (For Google Play verification)
FIREBASE_SERVICE_ACCOUNT=base64-encoded-json

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Feature Flags
ENABLE_DEMO_MODE=false
ENABLE_STAGING_FEATURES=false

# External APIs (Optional)
AMAZON_AFFILIATE_TAG=thecookflow-20
SENTRY_DSN=https://...@sentry.io/...

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@thecookflow.com
SMTP_PASS=your-app-password

# Redis (Optional - for session storage)
REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
NEW_RELIC_LICENSE_KEY=...
DATADOG_API_KEY=...